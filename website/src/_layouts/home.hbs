---
layout: base.hbs
isHomepage: true
---

<aside class="desktop">
  {{! NOTE: this LanguageToggle for "desktop" viewports only }}
  {{>language_toggle}}
</aside>

{{!-- progress indicators shown only on wide viewports --}}
{{>progress_indicator}}

{{!-- rent history modal dialog --}}
{{#>modal_dialog className="modal--rent-history"}}
  <div class="modal--content">
    <img class="modal--rent-history-img" src="/assets/png/sample-rent-history.png">
  </div>
{{/modal_dialog}}

{{!-- tenants rights modal dialog --}}
{{#>modal_dialog className="modal--tenants-rights"}}
{{!-- NOTE: content added dynamically --}}
{{/modal_dialog}}

<main>
  <section
    class="slides-container"
    {{!-- TODO: add translations for aria-label --}}
    aria-label="A step by step guide to Rent Stabilization in New York City"
    {{!-- TODO: add translations for aria-roledescription --}}
    aria-roledescription="carousel"
  >
    {{!-- NOTE: aria-live is used here so that when the next slide becomes active the assistive tech (e.g. screen reader) notifies the user of the change --}}
    <div class="slides" aria-live="polite">
      <div
        class="slide"
        tabindex="-1"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="1 of 9"
        id="slide-1"
      >
        <aside class="mobile">
          {{! NOTE: this LanguageToggle for "mobile" / "tablet" viewports only }}
          {{>language_toggle}}
        </aside>
        <div class="centered">
          <div>
            <img class="triple-s" height="40" src="/assets/png/triple-sss.png" alt="">
            <img class="building intro" height="120" src="/assets/png/building.png" alt="">
          </div>
          <h1 id="slide-1-title" class="font-style-hero landing">{{ main.slide01.h1 }}</h1>
          <p class="font-style-secondary sub-head">{{ main.slide01.subhead }}</p>
          <p class="go-step4">
            {{ main.slide01.landing }}
            <a class="go-step4" href="#slide-7">
              {{ main.slide01.go_step_4 }}
            </a>
          </p>
        </div>
        <button type="button" class="button--go-next">
          <div>{{ main.nav_bottom_arrow.begin }}</div>
          <div class="arrow"></div>
        </button>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-2"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="2 of 9"
      >
        <div class="centered v-centered">
          <h2 id="slide-2-title" class="font-style-hero step">{{ main.slide02.h2 }}</h2>
          <p class="step">{{ main.slide02.privacy }}</p>
          {{>address_search_form}}
        </div>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-3"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="3 of 9"
      >
        <div class="centered v-centered">
          <h2 id="slide-3-title" class="font-style-hero checking"> {{ main.slide03.checking }} </h2>
          <p> {{ main.slide03.p }} </p>
          <div id="sprite"></div>
        </div>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-4"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="4 of 9"
      >
        <div class="centered v-centered">
          <div class="yes hidden">
            <h2>{{{ main.slide04.yes.h2 }}}</h2>
            <p>{{{ main.slide04.yes.p }}}</p>
          </div>

          <div class="no">
            <p>{{{ main.slide04.no.p }}}</p>
          </div>

          <div id="map-container">
            {{>search_result_map}}
          </div>
        </div>

        <button type="button" class="button--go-next">
          <div>{{ main.nav_bottom_arrow.next }}</div>
          <div class="arrow"></div>
        </button>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-5"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="5 of 9"
      >
        <div class="centered v-centered">
          <h2 id="slide-5-title">{{main.slide05.h2}}</h2>
          <ul class="dhcr-choice" role="list">
            <li>
              <p>
                {{main.slide05.online}}
                <a href="https://portal.hcr.ny.gov/app/ask" target="_blank">
                  {{main.slide05.hcr_ny_gov}}
                </a>
              </p>
            </li>
            <li>
              <p>{{main.slide05.phone}}
                <a href="tel:1-718-739-6400">718 739-6400</a>
              </p>
            </li>
            <li>
              <p>{{main.slide05.visit}}
                <a href="http://www.nyshcr.org/AboutUs/contact.htm#rent-admin">
                  {{main.slide05.office}}
                </a>
              </p>
            </li>
          </ul>
          <p class="be-sure">
            {{main.slide05.tell_them}}
            {{main.slide05.mailed}}
          </p>
        </div>
        <button type="button" class="button--go-next">
          <div>{{main.nav_bottom_arrow.next}}</div>
          <div class="arrow"></div>
        </button>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-6"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="6 of 9"
      >
        <div class="centered v-centered">
          <h2 id="slide-6-title" class="font-style-hero check-it">{{main.slide06.h2}}</h2>
          <p class="check-it">
            {{main.slide06.arrive}}
          </p>
          <p class="check-it">
            {{main.slide06.friends}}
          </p>
          {{>add_to_calendar}}
        </div>
        <button type="button" class="button--go-next">
          <div>{{main.nav_bottom_arrow.next}}</div>
          <div class="arrow"></div>
        </button>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-7"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="7 of 9"
      >
        <div class="centered v-centered">
          <h2 id="slide-7-title">{{main.slide07.h2}}</h2>
          <img
            class="rent-history"
            height="190"
            src="/assets/png/sample-rent-history-thumb.png"
            {{!-- TODO: add translations for alt text --}}
            alt="Sample rent history provided by the NY DHCR. The letters RS under the Apartment Status column means rent stabilized."
          >
          <p class="view-sample">
            <button
              type="button"
              class="button--secondary js-rh-modal-trigger"
            >
              {{main.slide07.p}}
            </button>
          </p>
        </div>
        <button type="button" class="button--go-next">
          <div>{{main.nav_bottom_arrow.next}}</div>
          <div class="arrow"></div>
        </button>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-8"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="8 of 9"
      >
        <div class="centered v-centered">
          <h2 id="slide-8-title">{{main.slide08.h2}}</h2>
          <ul role="list" class="action-choice">
            <li>
              <h3>{{main.slide08.option01}}</h3>
              <p class="no-local-tr">
                <a href="info/resources.html" target="_blank">{{main.slide08.no_local_tr.a}}</a>
                {{main.slide08.no_local_tr.p}}
              </p>
              <p class="yes-local-tr hidden">
                {{main.slide08.yes_local_tr.p}}
              </p>
              <button
                type="button"
                class="button js-tr-modal-trigger"
                style="text-transform:none;color:inherit;"
              >
                {{main.slide08.yes_local_tr.a}}
              </button>
            </li>

            <li>
              <h3>{{main.slide08.option02}}</h3>
              <p>{{main.slide08.p1}}
                <a href="http://www.nyshcr.org/Forms/Rent/ra89.pdf" target="_blank">{{main.slide08.a}}</a>
                {{main.slide08.p2}}
              </p>
            </li>
          </ul>
        </div>
        <button type="button" class="button--go-next">
          <div>{{main.nav_bottom_arrow.next}}</div>
          <div class="arrow"></div>
        </button>
      </div>

      <div
        class="slide"
        tabindex="-1"
        id="slide-9"
        role="group"
        {{!-- TODO: add translations for aria-roledescription --}}
        aria-roledescription="slide"
        {{!-- TODO: add translations for aria-label --}}
        aria-label="9 of 9"
      >
        <div class="centered v-centered">
          <h2 id="slide-9-title" class="font-style-hero end">{{main.slide09.h2}}</h2>
          <img class="mascot" height="360" loading="lazy" src="assets/png/yes.png" alt="">
          <div class="flex flex-wrap" style="--gap:24px">
            <button type="button" class="button--primary start-over go-first">
              {{main.slide09.start}}
            </button>
            <a class="button--primary learn-more" href="info/why.html">
              {{main.slide09.learn}}
            </a>
          </div>
          <div class="share-box-end">
            <p class="share-it">{{main.slide09.share}}</p>
            <div class="addthis_sharing_toolbox"></div>
          </div>
        </div>
      </div>

    </div>
  </section>
</main>
